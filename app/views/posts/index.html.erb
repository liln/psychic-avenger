
<section class="section_main">
  <div class="row">
    <div class="twelve columns">

      <h1>Blog Posts</h1>

      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th width='80%'>Body</th>
          </tr>
        </thead>

        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= link_to post.title, post %></td>
              <td>
                <%= post.body %>
                <br><br>
                <%= link_to 'Edit', edit_post_path(post) if policy(post).edit? %>
                <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } if policy(post).destroy? %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Post', new_post_path if current_user.present? %>

    </div>
  </div>
</section>
