<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p id="author">
  <strong>By:</strong> <%= @post.author.email %>
</p>

<% if current_user.present? %>
  <p id="status">
    <strong>Status:</strong> <%= @post.published? ? "Published" : "Unpublished" %>
  </p>
<% end %>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
